@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registrieren";
}

<h1>@ViewData["Title"]</h1>
<h2 id="external-login-title">Verknüpfen Sie Ihr @Model.ProviderDisplayName-Konto.</h2>
<hr />

<p id="external-login-description" class="text-info">
    Sie haben sich erfolgreich mit <strong>@Model.ProviderDisplayName</strong> authentifiziert.
    Bitte geben Sie unten eine E-Mail-Adresse für diese Seite ein und klicken Sie auf die Schaltfläche "Registrieren", um die Anmeldung abzuschließen.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Bitte geben Sie Ihre E-Mail-Adresse ein."/>
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Registrieren</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
